{
  "compilerOptions": {
    "outDir": "build",
    "allowJs": true,
    "jsx": "react-jsx",
    "target": "es2020",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
